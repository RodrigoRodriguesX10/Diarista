@model IEnumerable<Diarista.Models.Servico>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Diarista</h2>
        </div>
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Logout", "LogOff", "Authentication", routeValues: null, htmlAttributes: new { @class = "color-text btn btn-danger" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Contratante")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataPublicacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataContratacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayName("Status do Serviço")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayName(item.Contratante != null ? item.Contratante.Nome : "-")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataPublicacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataContratacao)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayName(item.Status.ToString())
                        </td>
                        <td>
                            @Html.ActionLink("Aceitar", "Aceitar", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Recusar", "Recusar", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
